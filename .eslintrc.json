{
  "extends": ["prettier"],
  "plugins": ["prettier"],
  "env": {
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module",
    "requireConfigFile": false
  },
  "rules": {
    "semi": ["error", "never"],
    "func-names": 0,
    "no-param-reassign": 0,
    "no-multi-str": 0,
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": ["error", { "allow": ["tron"] }],
    "consistent-return": 0
  }
}
